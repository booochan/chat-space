.group
  .group__head
    .group__head__title
      = group.name
      .group__head__title__members
        Member：
        - group.relationships.each do |member|
          = member.user.name
    .group__head__edit
      = link_to "Edit" , edit_group_path(group)
  .group__chat
    = render partial: "/messages/message"
  .group__message
    = form_for message, url: group_messages_path do |f|
      .submit-message
        = f.text_field :text, placeholder: "type a message"
        = f.label :image do
          = fa_icon "image"
          = f.file_field :image, class: "ignore"
      = f.submit "Send", data: { disable_with: "送信中..." }
