.message{ "data-message-id": message.id }
  .upper-message
    .upper-message__name
      = message.user.name
    .upper-message__createdat
      = message.created_at.to_s
  .lower-meesage
    - if message.text.present?
      .lower-message__text
        = message.text
    .lower-message__image
      = image_tag message.image.url if message.image.present?
